<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="seekBar">
        <item name="android:progressBackgroundTint">@color/allWhite</item>
        <item name="android:progressTint">@color/progressTint</item>
        <item name="android:colorControlActivated">@color/colorControl</item>
        <item name="android:thumbTint">@color/seekThumb</item>

    </style>

    <style name="blueSwitch">
        <item name="colorControlActivated">@color/allWhite</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="trackTint">@drawable/switch_button</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
